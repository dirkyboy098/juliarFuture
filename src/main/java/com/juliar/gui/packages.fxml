<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import com.juliar.gui.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.collections.FXCollections?>

<GridPane alignment="CENTER"
          xmlns:fx="http://javafx.com/fxml">
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
    <Label style="-fx-font: NORMAL 20 Montserrat;-fx-text-fill:white;" text="Packages"
           GridPane.columnIndex="0" GridPane.rowIndex="0">
    </Label>
    <TableView fx:id="tableView" GridPane.columnIndex="0"
               GridPane.rowIndex="1" GridPane.hgrow="ALWAYS" GridPane.vgrow="ALWAYS">
        <columns>
            <TableColumn text="Installed?">
                <cellValueFactory>
                    <PropertyValueFactory property="installed" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Module Name" fx:id="moduleTag">
                <cellValueFactory>
                    <PropertyValueFactory property="module" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Category">
                <cellValueFactory>
                    <PropertyValueFactory property="category" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Stability">
                <cellValueFactory>
                    <PropertyValueFactory property="stability" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Latest Version">
                <cellValueFactory>
                    <PropertyValueFactory property="latestversion" />
                </cellValueFactory>
            </TableColumn>
            <TableColumn text="Installed Version">
                <cellValueFactory>
                    <PropertyValueFactory property="installedversion" />
                </cellValueFactory>
            </TableColumn>
        </columns>
        <items>
            <FXCollections fx:factory="observableArrayList">
                <JuliarModule installed="true" module="Juliar.Future Core" category="internal" stability="stable" latestversion="0.02" installedversion="0.02" />
            </FXCollections>
        </items>
        <sortOrder>
            <fx:reference source="moduleTag" />
        </sortOrder>
    </TableView>
</GridPane>
